@model Invoisys.Infrastructure.CrossCutting.Identity.Model.ResetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Invoisys Sistemas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Images/invoiSys.ico">
</head>
<body>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <center>
                <h2><b>Crie uma nova senha</b></h2>
            </center>
            <hr />
            @Html.HiddenFor(model => model.Code)
            <div>
                <lable>E-mail</lable>
            </div>
            <div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @readonly = "readonly" } })
            </div>
            <div>
                <lable>Senha</lable>
            </div>
            <div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { required = "required" } })
            </div>
            <div>
                <lable>Confirme a senha</lable>
            </div>
            <div>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { required = "required" } })
            </div>
            <br />
            <div>
                <input type="submit" value="Enviar" />
            </div>
            <div>
                @Html.ValidationSummary("")
            </div>
        </div>
    }
</body>
</html>