@model Invoisys.Infrastructure.CrossCutting.Identity.Model.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Invoisys Sistemas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Images/invoiSys.ico">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            <form>
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Usuário (e-mail)", required = "required" } })
                </div>
                <br />
                <div>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Senha", required = "required" } })
                </div>
                <br />
                <button type="submit">Entrar</button>
                @Html.ValidationSummary("")
                <div>
                    <p><a href="@Url.Action("ForgotPassword", "Account")">Esqueceu sua senha?</a></p>
                </div>
            </form>
        </div>
    }
</body>
</html>